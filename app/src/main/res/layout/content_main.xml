<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <Button
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="For Gym Battle"
            tools:layout_editor_absoluteX="0dp"
            android:onClick="forGymBattleButton" tools:layout_editor_absoluteY="71dp"/>

    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:text="For Raid"
            tools:layout_editor_absoluteX="48dp"
            android:onClick="forRaidButton" android:layout_marginBottom="324dp"/>

    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="Best gym defenders"
            tools:layout_editor_absoluteX="0dp"
            android:onClick="bestDefendersButton" android:layout_marginBottom="176dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>